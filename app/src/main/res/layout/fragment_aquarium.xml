<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.aquarium.AquariumFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:layout_above="@id/iv_underTheSea"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sea2" />

        <ImageView
            android:id="@+id/iv_underTheSea"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_alignParentBottom="true"
            android:background="#78d8df"
            />


        <ImageView
            android:id="@+id/iv_fish"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fish2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>
</FrameLayout>